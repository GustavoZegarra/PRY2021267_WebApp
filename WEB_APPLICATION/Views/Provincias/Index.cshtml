@model IEnumerable<WEB_APPLICATION.Models.Provincia>

@{
    ViewData["Title"] = "Index";
}

<h1>Provincias (Peru)</h1>

<p>
    <a asp-action="Create">Registrar</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="bg-primary" style="color:whitesmoke">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProvincia">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProvincia">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProvincia">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
