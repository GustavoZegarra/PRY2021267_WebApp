@model IEnumerable<WEB_APPLICATION.Models.Incidente>

@{
    ViewData["Title"] = "Index";
}

<h1>Incidentes</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
@using (Html.BeginForm("Index", "Incidentes", FormMethod.Get))
{
    <p>
        Categoria: @Html.DropDownList("categoria", "Todas")
        Buscar por Nombre de Ciudadano: @Html.TextBox("SearchString")  
        <input type="submit" value="Filter" /></p>
}
<table class="table table-striped table-bordered">
    <thead class="bg-primary" style="color:whitesmoke">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
     @*       <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
     @*       <th>
                @Html.DisplayNameFor(model => model.FechaActualizacion)
            </th>*@
@*            <th>
                @Html.DisplayNameFor(model => model.Resuelto)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Usuario.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quebrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Motivo.Categoria)
            </th>
            <th>
                Latitud
            </th>
            <th>
                Longitud
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
        @*    <td>
                @Html.DisplayFor(modelItem => item.Imagen)*             
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
       @*     <td>
                @Html.DisplayFor(modelItem => item.FechaActualizacion)
            </td>*@
@*            <td>
                @Html.DisplayFor(modelItem => item.Resuelto)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
               <td>
                @Html.DisplayFor(modelItem => item.Usuario.DNI.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quebrada.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo.Detalle)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Motivo.Categoria.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GPS.Latitud)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.GPS.Longitud)
            </td>
            <td>
               @* <a asp-action="Edit" asp-route-id="@item.IdIncidente">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.IdIncidente">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdIncidente">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
