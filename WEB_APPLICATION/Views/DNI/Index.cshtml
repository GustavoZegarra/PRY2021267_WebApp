@model IEnumerable<WEB_APPLICATION.Models.DNI>

@{
    ViewData["Title"] = "Index";
}

<h1  >DNIs Registrados</h1>

<p>
    <a asp-action="Create">Registrar</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="bg-primary" style="color:whitesmoke">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodVerificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distrito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr  >
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodVerificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDni">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdDni">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDni">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
